---
import Hero from './Hero.astro';
import SkillCategory from './SkillCategory.astro';

import { languages, libraries, databases, others } from './SkillPaths';
---

<section class="section" id="skill">
	<Hero 
		title="My Skills" 
		tagline="Passionate about learning and mastering new technologies."
		align="center">
	</Hero>

	<div class="skills-content">
		<!-- Render Languages and Tools -->
		<SkillCategory title="Languages and Tools" skills={languages} />

		<!-- Render Libraries and Frameworks -->
		<SkillCategory title="Libraries and Frameworks" skills={libraries} />

		<!-- Render Databases and Others-->
		<div class="combined-row">
			<SkillCategory title="Databases" skills={databases} />

			<SkillCategory title="Others" skills={others} />
		</div>
	 </div>
</section>

<style>
	.section {
		grid-template-columns: repeat(4, 1fr);
		grid-template-areas: 'header header header header' 'gallery gallery gallery gallery';
		gap: 2rem;
		margin-top: 2rem;
	}

	.skills-content {
		margin-top: 2rem;
	}
	
	.combined-row {
		display: flex;
		flex-wrap: wrap;
		gap: 2rem;
	}

	@media (min-width: 50em) {
		.section {
			gap: 5rem;
		}

		.combined-row {
			gap: 5rem;
		}
	}
</style>

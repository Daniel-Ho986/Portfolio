---
import Hero from './Hero.astro';

const skills = [
  { path: "html5.svg", alt: "HTML5", modeClasses: [] },
  { path: "css3.svg", alt: "CSS3", modeClasses: [] },
  { path: "javascript.svg", alt: "JavaScript", modeClasses: [] },
  { path: "express.svg", alt: "Express.js", modeClasses: ["light-mode-only"] },
  { path: "express-dark.svg", alt: "Express.js", modeClasses: ["dark-mode-only"] },
  { path: "nodejs.svg", alt: "Node.js", modeClasses: [] },
  { path: "python.svg", alt: "Python", modeClasses: [] },
  { path: "firebase.svg", alt: "Firebase", modeClasses: [] },
];

const libraries = [
  { path: "reactjs.svg", alt: "React.js", modeClasses: [] },
  { path: "nextjs.svg", alt: "Next.js", modeClasses: ["light-mode-only"] },
  { path: "nextjs-dark.svg", alt: "Next.js", modeClasses: ["dark-mode-only"] },
  { path: "astro.svg", alt: "Astro", modeClasses: ["light-mode-only"] },
  { path: "astro-dark.svg", alt: "Astro", modeClasses: ["dark-mode-only"] },
];

const databases = [
  { path: "mongoDB.svg", alt: "MongoDB", modeClasses: [] },
];

const others = [
  { path: "cypress.svg", alt: "Cypress", modeClasses: ["light-mode-only"] },
  { path: "cypress-dark.png", alt: "Cypress", modeClasses: ["dark-mode-only"] },
  { path: "playwright.svg", alt: "Playwright", modeClasses: [] },
  { path: "git.svg", alt: "Git", modeClasses: [] },
];
---

<section class="section" id="skills">
	<Hero 
		title="My Skills" 
		tagline="Passionate about learning and mastering new technologies."
		align="start">
	</Hero>

	<!-- Render Languages and Tools -->
	<div class="skills-content">
		<div>
			<h5>Languages and Tools</h5>
			<div class="images-container">
			{skills.map(skill => (
				<img
				src={`../../public/assets/stack-icons/${skill.path}`}
				alt={skill.alt}
				class={`logo ${skill.modeClasses.join(' ')}`}
				/>
			))}
			</div>
		</div>

		<!-- Render Libraries and Frameworks -->
		<div>
			<h5>Libraries and Frameworks</h5>
			<div class="images-container">
			{libraries.map(library => (
				<img
				src={`../../public/assets/stack-icons/${library.path}`}
				alt={library.alt}
				class={`logo ${library.modeClasses.join(' ')}`}
				/>
			))}
			</div>
		</div>

		<!-- Render Databases -->
			<div class="combined-row">
				<div>
					<h5>Databases</h5>
					<div class="images-container">
					{databases.map(skill => (
						<img
						src={`../../public/assets/stack-icons/${skill.path}`}
						alt={skill.alt}
						class={`logo ${skill.modeClasses.join(' ')}`}
						/>
					))}
					</div>
				</div>

			<!-- Render Others -->
			<div>
				<h5>Others</h5>
				<div class="images-container">
				{others.map(skill => (
					<img
					src={`../../public/assets/stack-icons/${skill.path}`}
					alt={skill.alt}
					class={`logo ${skill.modeClasses.join(' ')}`}
					/>
				))}
				</div>
			</div>
		</div>
	</div>
</section>

<style>
	:global(.theme-dark) .logo.light-mode-only {
		display: none;
	}

	:global(html:not(.theme-dark)) .logo.dark-mode-only {
		display: none;
	}
	.section {
		gap: 2rem;
		margin-top: 2rem;
	}

	.skills-content {
		margin-top: 2rem;
	}

	.images-container {
		display: flex;
		justify-content: left;
		gap: 1rem;
		padding: 1rem;
		flex-wrap: wrap;
		max-width: 100%;
	}
	.logo {
		width: 65px;
		height: 65px;
		object-fit: cover;
	}

	.combined-row {
		display: flex;
		flex-wrap: wrap;
		gap: 2rem;
	}

	@media (min-width: 50em) {
		.section {
			grid-template-columns: repeat(4, 1fr);
			grid-template-areas: 'header header header header' 'gallery gallery gallery gallery';
			gap: 5rem;
		}

		.combined-row {
			gap: 5rem;
		}
	}
</style>

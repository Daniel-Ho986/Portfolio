---
import SubHeader from './SubHeader.astro';
import SkillCategory from './SkillCategory.astro';

import { languages, libraries, databases, others } from './SkillPaths';
---

<section class="section with-background bg-variant" id="skill">
	<SubHeader 
		header="My Skills" 
		description="Passionate about learning and mastering new technologies.">
	</SubHeader>

	<div class="skills-content">
		<!-- Render Languages and Tools -->
		<SkillCategory title="Languages and Tools" skills={languages} />

		<!-- Render Libraries and Frameworks -->
		<SkillCategory title="Libraries and Frameworks" skills={libraries} />

		<!-- Render Databases and Others-->
		<div class="combined-row">
			<SkillCategory title="Databases" skills={databases} />

			<SkillCategory title="Others" skills={others} />
		</div>
	 </div>
</section>

<style>
	.section {
		display: grid;
		grid-template-areas: 'header' 'gallery';
		gap: 2rem;
	}
	
	.combined-row {
		display: flex;
		flex-wrap: wrap;
		gap: 2rem;
	}

	@media (min-width: 50em) {
		.section, .combined-row {
			gap: 5rem;
		}
	}
</style>

---
interface Props {
    header: string;
    description: string;
    align?: 'start' | 'center'
}

const { align= 'center', header, description } = Astro.props;
---

<header class='section-header stack gap-2 lg:gap-4'>
    <h3>{header}</h3>
    <p>{description}</p>
</header>

<style>
    .section-header {
		justify-self: center;
		text-align: center;
        align-self: center;
		max-width: 50ch;
		font-size: var(--text-md);
		color: var(--gray-300);
	}

	.section-header h3 {
		font-size: var(--text-2xl);
	}

    @media (min-width: 50em) {
        .section-header {
			grid-area: header;
			font-size: var(--text-lg);
		}

		.section-header h3 {
			font-size: var(--text-4xl);
		}
    }
</style>
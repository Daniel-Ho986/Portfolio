<style>
    .section {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .about-content { 
        max-width: 800px;
        width: 100%;
    }

    p {
        position: relative;
        padding: 2rem;
        font-family: var(--font-body);
        font-size: var(--text-base);
		color: var(--gray-200);
    }

    .highlight {
        position: absolute;
        top: 0;
        left: 0;
        transform: translateY(-30%);
        padding: 1rem 2rem;
        z-index: 1;
    }

    .action-container {
        margin-left: auto;
    }

    @media (min-width: 50em) {
        .action-container {
            transform: translateX(-50%);
        }
    }
</style>

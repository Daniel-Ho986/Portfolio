---
import type { iconPaths } from './IconPaths';

interface Props {
	title: string;
	description: string;
	image: string;
	code: string;
	site: string;
	techStack: string[];
}

const { title, description, image, code, site, techStack } = Astro.props;
---

<div class="card">
	<!-- Circle icon for gitHub and site link -->
	<span class="title">{title}</span>
	<span class="description">{description}</span>
	<!-- Show tech stack as a flex in a row or two rows if more -->
	<img src={image} alt={title} loading="lazy" decoding="async" /> 
</dvi>

<style>
	.card {
		position: relative;
		display: grid;
		grid-template: auto / auto .6fr;
		height: 11rem;
		background: var(--gradient-subtle);
		border: 1px solid var(--gray-800);
		border-radius: 0.75rem;
		overflow: hidden;
		box-shadow: var(--shadow-sm);
		text-decoration: none;
		font-family: var(--font-brand);
		font-size: var(--text-lg);
		font-weight: 500;
		transition: box-shadow var(--theme-transition);
	}

	.card:hover {
		box-shadow: var(--shadow-md);
	}

	/* .title {
		grid-area: 1 / 1 / 2 / 2;
		z-index: 1;
		margin: 0.5rem;
		padding: 0.5rem 1rem;
		background: var(--gray-999);
		color: var(--gray-200);
		border-radius: 0.375rem;
	} */

	img {
		position: absolute;
		grid-area: 1 / 2 / 1 / 2;
		width: 100%;
		height: 70%;
		align-self: center;
		border-radius: 1rem 0 0 1rem;
	}

	@media (min-width: 50em) {
		.card {
			grid-template: auto / .7fr auto;
			height: 22rem;
			border-radius: 1.5rem;
		}

		.title {
			border-radius: 0.9375rem;
		}
	}
</style>
